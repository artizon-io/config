# https://pkg.go.dev/github.com/gokcehan/lf#hdr-Configuration
# or man lf

set icons true
set ignorecase true
set hidden true
set cleaner ~/.config/lf/clean.sh
set previewer ~/.config/lf/preview.sh

cmd delete ${{
  ~/.config/lf/delete.sh $fx
}}
map <delete> delete

cmd open ${{
  ~/.config/lf/open.sh
}}

cmd create_new ${{
  ~/.config/lf/create_new.sh $@
}}
map a :push :create_new<space>
